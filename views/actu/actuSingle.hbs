{{!-- 
Page article seul
 --}}

<div class="container my-5">
    <div class="row">
        <div class="col-md-12 mb-4 text-center">

            {{!----------------titre -----------------}}
            <h1 class="colorWrite title">{{ dbActu.title }} </h1>
            {{!----------------/titre -----------------}}
        </div>

        {{!----------------article -----------------}}
        {{!-- Contenu --}}
        <div class="col-md-12 mb-4 text-center">
            <p class="text-justify">
                {{ dbActu.content }}
            </p>
        </div>
        {{!-- /Contenu --}}

        {{!-- Image --}}
        <div class="col-md-12 mb-5 text-center">
            <img src="{{ dbActu.image }}" alt="image de l'article" width="200" height="200" style="object-fit: contain">
        </div>
        {{!-- /Image --}}

        <div class="col-md-12 d-flex">
            {{!-- bouton commenter --}}
            <p class="text-muted">Publié le
                {{ moment dbActu.createDate format="DD/MM/YYYY" }}</p>
        </div>

        <div class="col-md-12 d-flex flex-row-reverse">
            {{!-- bouton commenter --}}
            {{#if isVerified}}
            <button class="btn btnSite" data-toggle="modal" data-target="#modalCommenter{{_id}}"
                data-whatever="@getbootstrap" type="submit">Commenter</button>
            {{/if}}
            {{!-- /bouton commenter --}}
        </div>
        {{!----------------/article -----------------}}
    </div>
</div>

{{!-- Zone commentaire --}}
<div class="container">
    <div class="row">
        <div class="col-md-12 mb-5">
            <div class="list-group">
                {{#each (reverse dbComment) }}
                {{#if isVerified}}
                <div class="list-group-item list-group-item-action mb-3">
                    <p class="mb-1"> {{ content }} </p>
                    <div class="d-flex w-100 justify-content-between">
                        <small>Ecrit par {{ pseudoAuthor }}</small>
                        <small>Posté le {{ moment createDate format="DD-MM-YY"}}</small>
                    </div>
                </div>
                {{/if}}
                {{/each }}
            </div>
        </div>
    </div>
</div>
{{!-- /Zone commentaire --}}


{{!-- Modal commenter actualité --}}
{{#if isVerified}}
{{> modal/modalActuSingleComment}}
{{/if}}
{{!-- /Modal commenter actualité --}}