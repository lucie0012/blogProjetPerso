<div class="container">
    <div class="row">
        {{!----------------titre -----------------}}
        <h1>{{ dbActu.title }} </h1>
        {{!----------------/titre -----------------}}

        {{!----------------actualité -----------------}}
        <div>
            <div>
                <img src="{{ dbActu.image }}" alt="image actu" widht="200px" height="200px">
            </div>
            <div>
                <p>
                    {{ dbActu.content }}
                </p>
            </div>
        </div>
        <div>
            {{!-- bouton commenter --}}
            {{#if isVerified}}
            <button class="btn" data-toggle="modal" data-target="#modalCommenter{{_id}}" data-whatever="@getbootstrap"
                type="submit">Commenter</button>
            {{/if}}
            {{!-- bouton commenter --}}
        </div>
        {{!----------------/actualité -----------------}}
    </div>
</div>

{{!-- Modal commenter actualité --}}
<div class="modal fade" id="modalCommenter{{_id}}" tabindex="-1" role="dialog" aria-labelledby="#modalCommenterLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCommenterLabel">Ajouter un commentaire</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <form action="/commentaireActu/{{ dbActu._id }}" method="POST">
                <div class="container">
                    <div class="row modal-body">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="pseudoComment" class="col-form-label">Votre pseudo : </label>
                                <input class="form-control" id="pseudoComment" type="text" name="pseudo"
                                    value="{{ dbUser.pseudo }}" disabled="disabled">
                            </div>
                            <div class="form-group">
                                <label for="commentActu" class="col-form-label">Votre commentaire : </label>
                                <textarea class="form-control" id="commentActu" type="text" name="content"
                                    required></textarea>
                            </div>
                        </div>
                        <div class="col-md-12 ">
                            <div class="d-flex flex-row-reverse">
                                <button type="submit" class="btn">Poster</button>
                                <button type="button" class="btn p-2" data-dismiss="modal">Annuler</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>
{{!-- /Modal commenter actualité --}}

