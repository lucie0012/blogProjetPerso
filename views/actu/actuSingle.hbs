{{!-- Edition Article --}}
<form action="/actuSingle/{{ dbActu._id }}/?_method=PUT" method="POST" enctype="multipart/form-data">
    <div>
        <div>
            <label for="title">Titre</label>
            <input type="text" name="title" value="{{ dbActu.title }}" />
        </div>
        <div>
            <label for="content">Description</label>
            <textarea rows="3" name="content">{{ dbActu.content }}</textarea>
        </div>
        <div>
            <label>
                <input type="file" name="image" value="{{ dbActu.image }}">
                <span>
                    Envoyer une nouvelle image au format .jpg .jpeg .gif uniquement
                </span>
            </label>
        </div>
    </div>
    <div>
        <button type="submit">Modifier </button>
    </div>
</form>
{{!-- /Editer Article --}}