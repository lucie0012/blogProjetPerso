{{!-- 
Modal du Header pour confirmer la suppression du compte
 --}}

{{!------------------ Modal confirmation suppression compte-------------------}}
<div class="modal fade" id="modalConfirmSuppAccount{{ _id }}" tabindex="-1" role="dialog"
    aria-labelledby="modalConfirmSuppAccountLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header" id="modalConfirmSuppAccountLabel">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            {{!-- Formulaire de suppression --}}
            <form action="/userEditDelete/{{ dbUserId._id }}/?_method=PUT" method="POST" enctype="multipart/form-data">
                <div class="container">
                    <div class="row modal-body">
                        <div class="col-md-12">
                            <div class="form-group">
                                <p>{{ dbUserId.pseudo}} confirmez-vous la suppression de votre compte ?</p>
                            </div>
                        </div>
                        <div class="col-md-12 ">
                            <div class="d-flex flex-row-reverse">
                                <button type="submit" class="btn btnSite">Oui</button>
                                <button type="button" class="btn btnSite p-2 mr-2" data-dismiss="modal">Non</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            {{!-- /Formulaire de suppression --}}

        </div>
    </div>
</div>
{{!--------------------- /Modal confirmation suppression compte-------------------}}