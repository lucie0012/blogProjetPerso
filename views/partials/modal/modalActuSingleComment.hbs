{{!-- 
Modal d'Actu Single pour commentaire l'article
 --}}

{{!-- Modal commenter actualité --}}
<div class="modal fade" id="modalCommenter{{_id}}" tabindex="-1" role="dialog" aria-labelledby="#modalCommenterLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalCommenterLabel">Ajouter un commentaire</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>

            {{!-- Formulaire d'envoi --}}
            <form action="/commentaireActu/{{ dbActu._id }}" method="POST">
                <div class="container">
                    <div class="row modal-body">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="pseudoComment" class="col-form-label">Votre pseudo : </label>
                                <input class="form-control" id="pseudoComment" type="text" name="pseudo" maxlength="100"
                                    value="{{ dbUserId.pseudo }}" disabled="disabled">
                            </div>
                            <div class="form-group">
                                <label for="commentActu" class="col-form-label">Votre commentaire : </label>
                                <textarea class="form-control" id="commentActu" type="text" name="content" maxlength="5000"
                                    required></textarea>
                            </div>
                        </div>
                        <div class="col-md-12 ">
                            <div class="d-flex flex-row-reverse">
                                <button type="submit" class="btn btnSite">Poster</button>
                                <button type="button" class="btn btnSite p-2 mr-2" data-dismiss="modal">Annuler</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
            {{!-- /Formulaire d'envoi --}}

        </div>
    </div>
</div>
{{!-- /Modal commenter actualité --}}