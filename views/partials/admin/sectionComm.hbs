{{!-- 
Section commentaires de la page admin avec ces modals liés
 --}}

{{!------------------------------------------------------------- COMMENTAIRES-----------------------------------------------------------}}
<div class="card">
    <div class="card-header" id="headingFour">
        <h2 class="mb-0">
            <div class="container">
                <div class="row modal-body">
                    <div class="col-md-12">
                        <div class="d-flex flex-row">
                            <a class="btn collapsed" type="button" data-toggle="collapse" data-target="#collapseFour"
                                aria-expanded="false" aria-controls="collapseFour">
                                Liste des commentaires
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </h2>
    </div>
    <div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#accordionAdmin">
        <div class="table-responsive">

            <table class="table table-striped events-table">
                <thead>
                    <tr>
                        <th scope="col" class="event-Pseudo de l'auteur">Pseudo de l'auteur</th>
                        <th scope="col" class="event-Titre de l'article">Titre de l'article</th>
                        <th scope="col" class="event-Commentaire">Commentaire</th>
                        <th scope="col" class="event-Outils">Outils</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each dbComment}}
                    <tr>
                        <td data-label="Pseudo de l'auteur">{{ pseudoAuthor }}</td>
                        <td data-label="Titre de l'article">{{ titleArticle }}</td>
                        <td data-label="Commentaire">{{ content }}</td>
                        <td data-label="Outils">
                            <span>
                                {{#unless isVerified}}
                                <button class="btn btn-default border border-dark" aria-label="Valider" type="submit"
                                    data-toggle="modal" data-target="#modalConfirmValidComm{{ _id }}">
                                    <i class="far fa-check-circle" aria-hidden="true"></i>
                                </button>
                                {{/unless}}
                                <button class="btn btn-danger" aria-label="Supprimer" type="submit" data-toggle="modal"
                                    data-target="#modalConfirmSuppComm{{ _id }}">
                                    <i class="fa fa-trash-alt" aria-hidden="true"></i>
                                </button>
                            </span>
                        </td>
                    </tr>

                    {{!------------------ Modal confirmation validation commentaire -------------------}}
                    <div class="modal fade" id="modalConfirmValidComm{{ _id }}" tabindex="-1" role="dialog"
                        aria-labelledby="#modalConfirmValidCommLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>

                                <form action="/commentaireActu/{{ _id }}/?_method=PUT" method="POST">
                                    <div class="container">
                                        <div class="row modal-body">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <p>Confirmez-vous la vérification du commentaire de
                                                        "{{ pseudoAuthor }}" ?</p>
                                                </div>
                                            </div>
                                            <div class="col-md-12 ">
                                                <div class="d-flex flex-row-reverse">
                                                    <button type="submit" class="btn btnSite">Oui</button>
                                                    <button type="button" class="btn btnSite p-2 mr-2"
                                                        data-dismiss="modal">Non</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                    {{!--------------------- /Modal confirmation validation commentaire -------------------}}

                    {{!------------------ Modal confirmation suppression commentaire -------------------}}
                    <div class="modal fade" id="modalConfirmSuppComm{{ _id }}" tabindex="-1" role="dialog"
                        aria-labelledby="#modalConfirmSuppCommLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>

                                <form action="/commentaireActu/{{ _id }}/?_method=delete" method="POST">
                                    <div class="container">
                                        <div class="row modal-body">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <p>Confirmez-vous la suppression du commentaire de
                                                        "{{ pseudoAuthor }}" ?</p>
                                                </div>
                                            </div>
                                            <div class="col-md-12 ">
                                                <div class="d-flex flex-row-reverse">
                                                    <button type="submit" class="btn btnSite">Oui</button>
                                                    <button type="button" class="btn btnSite p-2 mr-2"
                                                        data-dismiss="modal">Non</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                    {{!--------------------- /Modal confirmation suppression commentaire -------------------}}

                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</div>