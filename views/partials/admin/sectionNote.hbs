{{!------------------------------------------------------------- NOTES/COMMENTAIRE-----------------------------------------------------------}}
<div class="card">
    <div class="card-header" id="headingFive">
        <h2 class="mb-0">
            <div class="container">
                <div class="row modal-body">
                    <div class="col-md-12">
                        <div class="d-flex flex-row">
                            <a class="btn collapsed" type="button" data-toggle="collapse" data-target="#collapseFive"
                                aria-expanded="false" aria-controls="collapseFive">
                                Liste des notes/avis
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </h2>
    </div>
    <div id="collapseFive" class="collapse" aria-labelledby="headingFive" data-parent="#accordionAdmin">
        <div class="table-responsive">

            <table class="table table-striped events-table">
                <thead>
                    <tr>
                        <th class="event-Pseudo de l'auteur">Pseudo de l'auteur</th>
                        <th class="event-Nom du site">Nom du site</th>
                        <th class="event-Note">Note</th>
                        <th class="event-Commentaire">Commentaire</th>
                        <th class="event-Outils">Outils</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each dbNote }}
                    <tr>
                        <td data-label="Pseudo de l'auteur">{{ pseudoAuthor }}</td>
                        <td data-label="Nom du site">{{ titleSite }}</td>
                        <td data-label="Note">{{ note }}</td>
                        <td data-label="Commentaire">{{ comment }}</td>
                        <td data-label="Outils">
                            <span>
                                {{#unless isVerified}}
                                <button class="btn btn-default border border-dark" aria-label="Valider" type="submit"
                                    data-toggle="modal" data-target="#modalConfirmValidNote{{ _id }}">
                                    <i class="far fa-check-circle" aria-hidden="true"></i>
                                </button>
                                {{/unless}}
                                <button class="btn btn-danger" aria-label="Supprimer" type="submit" data-toggle="modal"
                                    data-target="#modalConfirmSuppNote{{ _id }}">
                                    <i class="fa fa-trash-alt" aria-hidden="true"></i>
                                </button>
                            </span>
                        </td>
                    </tr>

                    {{!------------------ Modal confirmation validation note/commentaire -------------------}}
                    <div class="modal fade" id="modalConfirmValidNote{{ _id }}" tabindex="-1" role="dialog"
                        aria-labelledby="#modalConfirmValidNoteLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>

                                <form action="/note/{{ _id }}/?_method=PUT" method="POST">
                                    <div class="container">
                                        <div class="row modal-body">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <p>Confirmez-vous la note de "{{ pseudoAuthor }}" ?</p>
                                                </div>
                                            </div>
                                            <div class="col-md-12 ">
                                                <div class="d-flex flex-row-reverse">
                                                    <button type="submit" class="btn btnSite">Oui</button>
                                                    <button type="button" class="btn btnSite p-2 mr-2"
                                                        data-dismiss="modal">Non</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                    {{!--------------------- /Modal confirmation validation note/commentaire -------------------}}

                    {{!------------------ Modal confirmation suppression note/commentaire -------------------}}
                    <div class="modal fade" id="modalConfirmSuppNote{{ _id }}" tabindex="-1" role="dialog"
                        aria-labelledby="#modalConfirmSuppNoteLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>

                                <form action="/note/{{ _id }}/?_method=delete" method="POST">
                                    <div class="container">
                                        <div class="row modal-body">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                    <p>Confirmez-vous la suppression de la note de "{{ pseudoAuthor }}"
                                                        ?</p>
                                                </div>
                                            </div>
                                            <div class="col-md-12 ">
                                                <div class="d-flex flex-row-reverse">
                                                    <button type="submit" class="btn btnSite">Oui</button>
                                                    <button type="button" class="btn btnSite p-2 mr-2"
                                                        data-dismiss="modal">Non</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                    {{!--------------------- /Modal confirmation suppression note/commentaire -------------------}}

                    {{/each}}

                </tbody>
            </table>
        </div>
    </div>
</div>