        {{!------------------------------------------------------------- UTILISATEURS-----------------------------------------------------------}}

        <div class="card">
          <div class="card-header" id="headingOne">
            <h2 class="mb-0">
              <div class="container">
                <div class="row modal-body">
                  <div class="col-md-12">
                    <div class="d-flex flex-row">
                      <a class="btn collapsed" type="button" data-toggle="collapse" data-target="#collapseOne"
                        aria-expanded="false" aria-controls="collapseOne">
                        Liste des utilisateurs
                      </a>
                    </div>
                  </div>
                </div>
              </div>
            </h2>
          </div>
          <div id="collapseOne" class="collapse" aria-labelledby="headingOne" data-parent="#accordionExample">
            <div class="card-body">

              <table class="table table-striped">
                <thead>
                  <tr>
                    <th scope="col">Nom</th>
                    <th scope="col">Pseudo</th>
                    <th scope="col">Fonction</th>
                    <th scope="col">Outils</th>
                  </tr>
                </thead>
                <tbody>
                  {{#each dbUser}}
                  <tr>
                    <td>{{ name }}</td>
                    <td>{{ pseudo }}</td>
                    <td>{{ fonction }}</td>
                    <td>
                      <span>
                        {{#unless isVerified}}
                        <button class="btn btn-default border border-dark" aria-label="Valider" type="submit"
                          data-toggle="modal" data-target="#modalConfirmValidUser{{ _id }}">
                          <i class="far fa-check-circle" aria-hidden="true"></i>
                          {{!-- 
                       <a class="dropdown-item" type="button" data-toggle="modal" data-target="#modalCreateArticle"><i
                          class="fas fa-plus-circle fa-sm" aria-hidden="true"></i>Ajouter</a> --}}
                        </button>
                        {{/unless}}
                        <button class="btn btn-primary" aria-label="Editer" type="submit" data-toggle="modal"
                          data-target="#modalEditUser{{_id}}">
                          <i class="far fa-edit" aria-hidden="true"></i>
                        </button>
                        <button class="btn btn-danger" aria-label="Supprimer" type="submit" data-toggle="modal"
                          data-target="#modalConfirmSuppUser{{ _id }}">
                          <i class="fa fa-trash-alt" aria-hidden="true"></i>
                        </button>
                      </span>
                    </td>
                  </tr>


                  {{!------------------ Modal confirmation validation utilisateur -------------------}}
                  <div class="modal fade" id="modalConfirmValidUser{{ _id }}" tabindex="-1" role="dialog"
                    aria-labelledby="#modalConfirmValidUserLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>

                        <form action="/verifiedUser/{{ _id }}/?_method=PUT" method="POST">
                          <div class="container">
                            <div class="row modal-body">
                              <div class="col-md-12">
                                <div class="form-group">
                                  <p>Confirmez-vous la vérification de "{{ pseudo }}" ?</p>
                                </div>
                              </div>
                              <div class="col-md-12 ">
                                <div class="d-flex flex-row-reverse">
                                  <button type="submit" class="btn">Oui</button>
                                  <button type="button" class="btn p-2" data-dismiss="modal">Non</button>
                                </div>
                              </div>
                            </div>
                          </div>
                        </form>

                      </div>
                    </div>
                  </div>
                  {{!--------------------- /Modal confirmation validation utilisateur -------------------}}


                  {{!----------------------- Modal édition utilisateur ---------------------------}}
                  <div class="modal fade" id="modalEditUser{{_id}}" tabindex="-1" role="dialog"
                    aria-labelledby="#modalEditUserLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <h5 class="modal-title" id="modalEditUserLabel">Modifier l'utilisateur "{{ pseudo }}"</h5>
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>

                        <form action="/adminUserEdit/{{ _id }}/?_method=PUT" method="POST">
                          <div class="container">
                            <div class="row modal-body">
                              <div class="col-md-12">
                                <div class="form-group">
                                  <img src="{{ image }}" alt="image user" widht="150px" height="150px">
                                </div>
                                <div class="form-group">
                                  <p>Nom d'utilisateur : {{ name }}</p>
                                  <p>Pseudo : {{ pseudo }}</p>
                                  <p>Adresse Email : {{ email }}</p>
                                  <p>Fonction : {{ fonction }} </p>
                                </div>
                                <div class="form-group">
                                  <label>Modifer la fonction de l'utilisateur:</label>
                                  <select name="role" required>
                                    <option value="">Rôle utilisateur</option>
                                    <option value="isAdmin">Administrateur</option>
                                    <option value="isVerified">Vérifié</option>
                                    <option value="isBan">Bannis</option>
                                  </select>
                                </div>
                              </div>
                              <div class="col-md-12 ">
                                <div class="d-flex flex-row-reverse">
                                  <button type="submit" class="btn">Modifier</button>
                                  <button type="button" class="btn p-2" data-dismiss="modal">Annuler</button>
                                </div>
                              </div>
                            </div>
                          </div>
                        </form>

                      </div>
                    </div>
                  </div>
                  {{!------------------------ /Modal édition utilisateur -------------------------------}}

                  {{!------------------ Modal confirmation suppression utilisateur-------------------}}
                  <div class="modal fade" id="modalConfirmSuppUser{{ _id }}" tabindex="-1" role="dialog"
                    aria-labelledby="#modalConfirmSuppUserLabel" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                          </button>
                        </div>

                        <form action="/adminUserEdit/{{ _id }}/?_method=delete" method="POST"
                          enctype="multipart/form-data">
                          <div class="container">
                            <div class="row modal-body">
                              <div class="col-md-12">
                                <div class="form-group">
                                  <p>Confirmez-vous la suppression de "{{ pseudo }}" ?</p>
                                </div>
                              </div>
                              <div class="col-md-12 ">
                                <div class="d-flex flex-row-reverse">
                                  <button type="submit" class="btn">Oui</button>
                                  <button type="button" class="btn p-2" data-dismiss="modal">Non</button>
                                </div>
                              </div>
                            </div>
                          </div>
                        </form>

                      </div>
                    </div>
                  </div>
                  {{!--------------------- /Modal confirmation suppression utilisateur-------------------}}

                  {{/each}}
                </tbody>
              </table>
            </div>
          </div>
        </div>