<div class="container text-center mb-5">
    <h1 class="mt-5 colorWrite">Contact</h1>
    <div class="row my-4">
        <div class="col-md-12">
            <table class="table-sm table-responsive d-flex justify-content-center">
                <tr>
                    <th scope="col"><a href="#"><i class="fab fa-facebook-square fa-3x mx-1"
                                style="color: #3b5999"></i></a></th>
                    <th scope="col"><a href="#"><i class="fab fa-twitter-square fa-3x mx-1"
                                style="color: #55acee"></i></a></th>
                    <th scope="col"><a href="#"><i class="fab fa-instagram fa-3x mx-1" style="color: #e4405f"></i></a>
                    </th>
                    <th scope="col"><a href="#"><i class="fab fa-youtube-square fa-3x mx-1"
                                style="color: #cd201f"></i></a></th>
                </tr>
            </table>
        </div>
    </div>
    {{#if needAlert }}
    {{#if isError  }}
    <label class="text-danger">Votre message n'a pas pu être envoyé. Veuillez réessayer plus tard.</label>
    {{/if}}
    {{#unless isError  }}
    <labe class="text-success">Votre message a bien été envoyé.</label>
        {{/unless}}
        {{/if}}
        <div class="row d-flex justify-content-center">
            <form action="/contact" method="POST">
                <div class="form-group row">
                    <label for="nomContact" class="col-sm-4 col-form-label">Votre nom</label>
                    <div class="col-sm-8">
                        <input type="text" id="nomContact" class="form-control" placeholder="Votre nom*" name="nameContact"
                            value="{{ dbUserId.name }}" disabled="disabled" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="pseudoContactl" class="col-sm-4 col-form-label">Votre pseudo</label>
                    <div class="col-sm-8">
                        <input type="text" id="pseudoContact" class="form-control" placeholder="Votre pseudo*" name="pseudo"
                            value="{{ dbUserId.pseudo }}" disabled="disabled" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="emailContact" class="col-sm-4 col-form-label">Votre email</label>
                    <div class="col-sm-8">
                        <input type="email" id="emailContact" class="form-control" placeholder="Votre email*" name="emailContact"
                            value="{{ dbUserId.email }}" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="sujetContact" class="col-sm-4 col-form-label">Votre sujet</label>
                    <div class="col-sm-8">
                        <input type="text" id="sujetContact" class="form-control" placeholder="Sujet*" name="subject" required>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="messageContact" class="col-sm-4 col-form-label">Votre message</label>
                    <div class="col-sm-8">
                        <textarea id="messageContact" class="form-control" rows="5" placeholder="Votre message*" name="content"
                            required></textarea>
                    </div>
                </div>
                <button id="envoyer" type="submit" class="btn btnSite mt-2">Envoyer</button>
            </form>
        </div>
</div>

