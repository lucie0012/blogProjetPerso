<div class="container my-5">
    <h1>Réinitialiser mon mot de passe</h1>
    <div class="row mt-5">
        <form action="/forgotPassword" method="POST">
            <div class="col-md-12">
                <div class="form-group">
                    <input type="email" class="form-control" name="email" placeholder="Votre Email *" value=""
                        required />
                </div>
            </div>
            <div class="col-md-12 mb-5">
                <div class="d-flex">
                    <a href="/"><button type="button" class="btn mt-3 mr-2" data-dismiss="modal">Revenir à l'accueil</button></a>
                    <button type="submit" class="btn mt-3">Réinitialiser</button>
                </div>
            </div>
        </form>
    </div>
</div>