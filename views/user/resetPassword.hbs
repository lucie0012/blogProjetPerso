<div class="container my-5">
    <h1 class="colorGreen">{{user.pseudo}} créez votre nouveau mot de passe</h1>
    <div class="row mt-5">
        <form action="/resetPassword/{{ user._id }}" method="POST">
            <div class="col-md-12">
                <div class="form-group">
                    <input type="password" class="form-control mb-4" name="newPassword"
                        placeholder="Nouveau mot de passe *" value="" required />
                    <input type="password" class="form-control" name="confNewPassword"
                        placeholder="Confirmation du mot de passe *" value="" required />
                </div>
            </div>
            <div class="col-md-12 mb-5">
                <div class="d-flex">
                    <a href="/"><button type="button" class="btn mt-3 mr-2" data-dismiss="modal">Revenir à
                            l'accueil</button></a>
                    <button type="submit" class="btn mt-3">Créer</button>
                </div>
            </div>
        </form>
    </div>
</div>