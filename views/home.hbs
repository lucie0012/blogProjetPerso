{{!-- Section cards du répertoire --}}
<div class="container mt-3 mb-5">

    {{!-- Titre section cards du répertoire --}}
    <h1 class="colorWrite title text-center"><a href="/repertory" class="text-reset"> Les derniers sites du
            répertoire</a></h1>
    {{!-- /Titre section cards du répertoire --}}

    <div class="row">

        {{!-- Cards du répertoire --}}
        <div class="card-deck mt-4">
            {{#each (limitEach dbRepertoryVerified 3 ) }}
            <div class="card limitCard ml-3">
                <div class="card-header">
                    <small class="text-muted">Dans catégorie :
                        {{#contains category "sansGluten" }}
                        Sans gluten
                        {{/contains }}
                        {{#contains category "sansLactose" }}
                        Sans lactose
                        {{/contains }}
                        {{#contains category "sansOeufs" }}
                        Sans oeufs
                        {{/contains }}
                        {{#contains category "sansCaseine" }}
                        Sans caséine
                        {{/contains }}
                        {{!-- / Note :  --}}
                    </small>
                </div>
                <div class="card-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 d-flex flex-column">
                                <h5 class="card-title">{{ title }}</h5>
                                <a href="{{ url }}" class="my-2" target="_blank">{{ url }}</a>
                                <p class="card-text my-2">{{ truncate content 200 }}</p>
                                <img src="{{ image }}" class="rounded float-left" height="120px" width="100px"
                                    style="object-fit: contain" alt="image ou logo du site">
                            </div>
                        </div>
                    </div>

                </div>
                {{!-- <a href="#" class="btn d-flex flex-row-reverse">Noter</a> --}}
            </div>
            {{/each }}
        </div>
        {{!-- /Cards du répertoire --}}

    </div>
</div>
{{!-- /Section cards du répertoire --}}

