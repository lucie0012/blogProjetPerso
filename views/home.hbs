{{!-- Section cards des articles --}}
<div class="container my-5">

    {{!-- Titre section cards des articles --}}
    <h1 class="colorWrite title text-center"><a href="/actus" class="text-reset"> Mes derniers articles</a></h1>
    {{!-- /Titre section cards des articles --}}

    <div class="row">

        {{!-- Cards des articles --}}
        <div class="card-deck mt-4">
            {{#each (limitEach dbActu 3 ) }}
            <div class="card limitCard ml-3">
                <div class="card-body">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12 d-flex flex-column">
                                <h5 class="card-title mt-2">{{ title }}</h5>
                                <p class="card-text mt-2">{{ truncate content 200 }}</p>
                                <img src="{{ image }}" class="rounded float-left mt-2" height="200px" width="180px"
                                    style="object-fit: contain" alt="image de l'article">
                                <a href="/actuSingle/{{ id }}"
                                    class="d-flex justify-content-end text-decoration-none mt-2"><button
                                        class="btn btnSite mt-3">Voir l'article</button></a>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Publié le
                        {{ moment createDate format="DD/MM/YYYY" }}</small>
                </div>
            </div>
            {{/each }}
        </div>
        {{!-- /Cards des articles --}}
        
    </div>
</div>
{{!-- /Section cards des articles --}}